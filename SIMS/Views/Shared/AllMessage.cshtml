
@{
    ViewBag.Title = "AllMessage";
    Layout = "~/Views/Shared/_LayoutEPortal.cshtml";
}

<script src="~/Scripts/PageJS/AllMessage.js"></script>

<style>

    .selectedclassname {
        background-color:#ededed;
    }
    .starcolor {
        color:red;
    }
</style>
<div>
    <div class="">

        <div class="page-title">
            <div class="title_left">
                <h3>Message Box</h3>
            </div>

            <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        @*<input type="text" class="form-control" placeholder="Search for...">*@
                        <span class="input-group-btn">
                            @*<button class="btn btn-default" type="button">Go!</button>*@
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Select the user and send the message<small>User Mail</small></h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li>
                                        <a href="#">Settings 1</a>
                                    </li>
                                    <li>
                                        <a href="#">Settings 2</a>
                                    </li>
                                </ul>
                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="row">
                            <div class="col-sm-5 mail_list_column">                                
                                @*<input type="text" class="form-control downmargin" placeholder="Search" />*@
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="Search for..." ng-model="searchkey" ng-keyup="GetSearchData($event)">
                                    <span class="input-group-btn">
                                        <button class="btn btn-default" type="button" ng-click="GetUserLIst(10)">Go!</button>
                                    </span>
                                </div>
                                <a  ng-repeat="u in UserList" ng-click="GetUserMessage(u)">
                                    <div class="mail_list" id="{{u.UserId}}">
                                        <div class="left">
                                            <i class="fa fa-star" id="star{{u.UserId}}"></i>
                                        </div>
                                        <div class="right">
                                            <h3>{{u.Name}}</h3>                                            
                                        </div>
                                    </div>
                                </a>

                                <button class="btn btn-sm btn-primary pull-right" type="button" ng-click="GetMoreUser()" ng-disabled="disabledmore">More</button>
                              
                            </div>
                            <!-- /MAIL LIST -->
                            <!-- CONTENT MAIL -->
                            <div class="col-sm-7 mail_view">
                                <div class="inbox-body">
                                    <div class="mail_heading row">
                                        <div class="col-md-8">
                                            
                                        </div>
                                        <div class="col-md-4 text-right">
                                            <p class="date"></p>
                                        </div>
                                        <div class="col-md-12">
                                            
                                        </div>
                                    </div>
                                    
                                    <div class="view-mail">
                                        @*<div class="container">*@
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="panel">                                                      
                                                        <div class="panel-body">
                                                            <a ng-click="GetOlderMessage()" class="pull-right">Older</a>
                                                            <ul class="chat">
                                                                <li class="left clearfix" ng-repeat="m in UserMessageList">
                                                                    <div>
                                                                        <img src="{{m.PhotoPath}}" alt="User Avatar" class="img-circle" style="width: 10%;" />
                                                                        <div class="header">
                                                                            <strong class="primary-font">{{m.ApplicantName}}</strong>
                                                                        </div>
                                                                        <small class="pull-right text-muted">
                                                                            <span class="glyphicon glyphicon-time"></span> {{m.MessageDatestr}} Days Ago
                                                                        </small>
                                                                    </div>
                                                                    <br />
                                                                    <div class="chat-body clearfix">                                                                      
                                                                        <p>
                                                                            {{m.Message}}
                                                                        </p>
                                                                    </div>
                                                                    
                                                                </li>
                                                               
                                                                
                                                                
                                                            </ul>
                                                        </div>
                                                        <div class="panel-footer">
                                                            <div class="input-group">
                                                                <input id="btn-input" type="text" ng-model="MessageInfo" class="form-control input-sm" placeholder="Type your message here..." ng-keyup="SaveMessageData($event)" />
                                                                <span class="input-group-btn">
                                                                    <button class="btn btn-warning btn-sm" id="btn-chat" ng-click="SaveMessage()">
                                                                        Send
                                                                    </button>
                                                                </span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        @*</div>*@

                                    </div>                                                                   
                                </div>

                            </div>
                            <!-- /CONTENT MAIL -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>